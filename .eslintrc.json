{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "standard-with-typescript",
        "airbnb",
        "airbnb-typescript"
    ],
    "overrides": [],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "project": "./tsconfig.json"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "no-tabs": 0,
        "indent": [
            2,
            "tab"
        ],
        "react/jsx-indent": [
            2,
            "tab"
        ],
        "react/jsx-indent-props": [
            2,
            "tab"
        ],
        "@typescript-eslint/indent": [
            2,
            "tab"
        ],
        "@typescript-eslint/strict-boolean-expressions": 0
    }
}